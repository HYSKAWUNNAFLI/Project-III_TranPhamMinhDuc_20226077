<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1766421875981-1" author="huygdo">
        <createTable tableName="permissions">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_permissions"/>
            </column>
            <column name="object" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="action" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1766421875981-2" author="huygdo">
        <createTable tableName="role_permissions">
            <column name="permission_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role_permissions"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role_permissions"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1766421875981-3" author="huygdo">
        <addUniqueConstraint columnNames="object, action" constraintName="uc_049044f94b00a7288046df886"
                             tableName="permissions"/>
    </changeSet>
    <changeSet id="1766421875981-4" author="huygdo">
        <addForeignKeyConstraint baseColumnNames="permission_id" baseTableName="role_permissions"
                                 constraintName="fk_rolper_on_permission" referencedColumnNames="id"
                                 referencedTableName="permissions"/>
    </changeSet>
    <changeSet id="1766421875981-5" author="huygdo">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="role_permissions"
                                 constraintName="fk_rolper_on_role" referencedColumnNames="id"
                                 referencedTableName="roles"/>
    </changeSet>

</databaseChangeLog>